<!--

    "song" parameter is passed from the above snippet

    - soid
    - name
    - friendly_name
    - artist
    - modification
    - duration
    - source



-->

<div class="song-item" data-soid="<%= song.soid %>">
    <div>
        <div class="flex apart">
            <div class="flex center song-detail-tag">
                <span class="tiny song-main-info">Song ID: </span>
                <span class="tiny song-detail-value song-main-info"><%= song.cid %></span>
                
            </div>
        </div>
        
        <div class="flex apart song-details">
            <div class="flex center song-details">
                <div class="song-detail-item">
                    <div class="flex apart">
                        <span class="tiny song-detail-tag">Full Name</span>
                    </div>
                    <div class="flex apart">
                        <input data-soid="<%= song.soid %>" value="<%= song.name %>" type="text" class="input song-detail-value" name="name" placeholder="name" value="<%= song.soid %>"/>
                    </div>
                </div>
                <div class="song-detail-item">
                    <div class="flex apart">
                        <span class="tiny song-detail-tag">Artist</span>
                    </div>
                    <div class="flex apart">
                        <input data-soid="<%= song.soid %>" value="<%= song.name %>" type="text" class="input song-detail-value" name="artist" placeholder="name" value="<%= song.soid %>"/>
                    </div>
                </div>
                
                <div class="song-detail-item">
                    <div class="flex apart">
                        <span class="tiny song-detail-tag">Visible Name</span>
                    </div>
                    <div class="flex apart">
                        <input data-soid="<%= song.soid %>" onchange="editsong(this)" type="text" class="input song-detail-value" placeholder="song Name" name="name" value="<%= song.name %>" />
                    </div>
                </div>
                
            </div>
            
            <div class="song-detail-item">
                <button data-soid="<%= song.soid %>" onclick="deletesong(this)" class="button-alternate"><span class="button-text">Delete</span></button>
                <button data-soid="<%= song.soid %>" onclick="deletesong(this)" class="button-alternate"><span class="button-text">Duplicate</span></button>
            </div>
        </div>
        <div>
            <span class="small no-display error error-message" name="error" data-soid="<%= song.soid%>"></span>
        </div>
    </div>
    
    
</div>