<!DOCTYPE html>
<html>
  <head>
    <title>Group</title>
    <%- include('./partials/links.ejs'); %>
    <link rel="stylesheet" href="/css/group.css" />
  </head>
  <body>

    

    <%- include('./partials/header.ejs'); %>
    
    <script>
        let gid = "<%= group.gid %>";
    </script>

    <script src="/js/group.js"></script>
    <div class="mainbodyoutside flex center">
        <div class="mainbody">
            <div class="flex apart group" style="background: <%= group.color %>;background: <%= group.gradientBackground %>">
                <div class="flex center">
                    <div>
                        <span class="xlarge material-symbols-rounded"><%= group.icon %></span>
                    </div>
                    <div class="spacing">
                        <span class="small">GROUP</span>
                        <span class="xlarge"><%= group.name %></span>
                    </div>
                    
                </div>
                <div class="flex center">
                    <% if(user) { %>
                        <% let membership = users.find(u => u.uid == user.uid) %>
                        <% if(membership) { %>
                            <button class="button-main white-bg" onclick="leaveGroup()"><span class="button-text" style="color: <%= group.color %>">Leave Group</span></button>
                            <% if(membership.elevated) { %>
                                <button class="button-main white-bg" onclick="window.location = '/group/<%= group.gid %>/edit'"><span class="button-text" style="color: <%= group.color %>">Edit Group</span></button>
                            <% } %>
                        <% } else { %>
                            <button class="button-main white-bg" onclick="joinGroup()"><span class="button-text" style="color: <%= group.color %>">Join Group</span></button>
                        <% } %> 

                    <% } else { %>
                        <span class="small"><i>Sign In to Join</i></span>
                    <% } %>
                </div>
            </div>
            <div class="splitpage spacing">
                <div class="content-left">
                    <div class="flex center">
                        <span class="large spacing">Upcoming Events</span>
                    </div>
                    
                </div>
                <div class="content-right">
                    
                    <div>
                        <span class="large spacing">Splits</span>
                        
                    </div>
                    
                    
                </div>
            </div>
        </div>
        
    </div>
    <%- include('./partials/footer.ejs'); %>
  </body>
</html>